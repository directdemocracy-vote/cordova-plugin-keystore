<?xml version="1.0" encoding="UTF-8"?>
<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
    xmlns:android="http://schemas.android.com/apk/res/android"
    id="cordova-plugin-keystore"
    version="0.1.0">
    <engines>
        <engine name="cordova" version=">=12.0.0" />
    </engines>
    <name>Cordova KeyStore</name>
    <description>A cordova plugin to create, store and sign private key</description>
    <author>Benjamin Délèze</author>
    <keywords>keystore</keywords>
    <license>Apache 2.0 License</license>
    <js-module name="KeyStore" src="www/KeyStore.js">
        <clobbers target="KeyStore" />
    </js-module>
    
    <platform name="android">
        <config-file target="res/xml/config.xml" parent="/*">
        <feature name="KeyStore">
            <param name="android-package" value="app.directdemocraty.plugin.Keystore"/>
        </feature>
        </config-file>

        <source-file src="src/android/KeyStore.java" target-dir="src/app/directdemocraty/plugin/"/>
    </platform>

</plugin>